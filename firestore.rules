
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Products and their ratings should be publicly readable.
    // Writes should be restricted.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write (e.g. admins)
      
      match /ratings/{ratingId} {
        allow read: if true;
        allow write: if request.auth != null; // Only authenticated users can leave reviews.
      }
    }

    // All other collections require authentication for any access.
    match /{path=**}/documents/{document} {
      allow read, write: if request.auth != null;
    }
  }
}
