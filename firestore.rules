
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- USER DATA ---
    match /users/{userId} {
      // Users can read and write their own data.
      allow read, write: if isOwner(userId);
      // Admins can list all users.
      allow list: if request.auth != null; 
    }

    match /users/{userId}/addresses/{addressId} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/shoppingCarts/{shoppingCartId} {
      allow read, write: if isOwner(userId);
    }

    // --- PUBLIC DATA ---
    match /products/{productId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }

    match /products/{productId}/ratings/{ratingId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, list: if true;
    }

    match /testimonials/{testimonialId} {
      allow get, list: if true;
      allow create: if request.auth != null;
    }

    // --- ADMIN & AUTHENTICATED USER DATA ---
    // Allow any authenticated user full access to these collections.
    // This simplifies admin access without complex role checks for now.
    match /orders/{orderId} {
      allow read, write, list: if request.auth != null;
    }

    match /purchasedRawMaterials/{materialId} {
      allow read, write, list: if request.auth != null;
    }
    
    match /usedRawMaterials/{usageId} {
      allow read, write, list: if request.auth != null;
    }
    
    match /inboundFinishedGoods/{inboundId} {
      allow read, write, list: if request.auth != null;
    }

    match /outboundFinishedGoods/{outboundId} {
      allow read, write, list: if request.auth != null;
    }
    
    match /sewingJobs/{jobId} {
      allow read, write, list: if request.auth != null;
    }
    
    // This allows admin to list all ratings across all products
    match /{path=**}/ratings/{ratingId} {
      allow list: if request.auth != null;
    }
  }
}
